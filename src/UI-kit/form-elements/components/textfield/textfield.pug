mixin textfield(options={})
    -
        const {
            header = false,
            title = '',
            description = '',
            placeholder = '',
            type = '',
            name = '',
            value = '',
        } = options;

    div.textfield
        if (header)
            div.textfield__header
                p.textfield__title=title
                p.textfield__description=description
        div.textfield__wrapper
            input.textfield__input(type=options.type, name=options.name, placeholder=options.placeholder, value=options.value)